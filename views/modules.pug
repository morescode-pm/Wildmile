extends layout

block content
  .page-header
    link(rel='stylesheet', href='/css/modules.css')

    h3 Modules

  button.btn.btn-primary(type='button' data-toggle='modal' data-target='#newmod')
    | New Module
  button.btn.btn-primary(type='button' data-toggle='modal' data-target='#newmod' onclick='clearPlants()')
    | View Plants
  button.btn.btn-primary(type='button' data-bs-toggle='collapse' data-bs-target='#collapseExample' aria-expanded='false' aria-controls='collapseExample')
    | Button with data-bs-target
  .card.card-body
    | Some placeholder content for the collapse component. This panel is hidden by default but revealed when the user activates the relevant trigger.

  .pb-2.mt-2.mb-4.border-bottom

  //#map(style='opacity: 0.95;')
  nav.navbar.sticky-top.bg-light.fixed-element
    .container-fluid
      a.navbar-brand(href='#') Sticky top
  #infoCard.card.fixed-element
    h5.card-header Featured
    .card-body
      h5.card-title Special title treatment
      p#infoText.card-text With supporting text below as a natural lead-in to additional content.
      a.btn.btn-primary(href='#') Go somewhere

  .media
    .col-lg
    #modMap.container(data-mods=mods data-plantedPlants= plantedPlants)
    //- #collapseExample.colapse
    //-   .col-lg 
    include plantsTable.pug

    append partials/scripts
      script(src='/js/modMap.js')
